<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vehicles_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.usman.yepbus.Vehicles_details">

        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VEHICLE DETAILS"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:textColor="#34609d"
            android:layout_marginStart="26dp"
            android:id="@+id/header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
         android:id="@+id/rl1"
            android:background="@drawable/username"
            >

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

          </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl1"
           android:id="@+id/rl2"
            android:layout_marginTop="7dp"
            android:background="@drawable/username"
           >

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
           android:id="@+id/rl3"
            android:layout_below="@+id/rl2"
            android:background="@drawable/username"
            >

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/rl3"
            android:id="@+id/rl4"
            android:background="@drawable/username"
            >

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

        </RelativeLayout>








    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/relative"
        android:layout_marginTop="30dp"
        android:textColor="#34609d"
        android:text="Vehicle Pictures"
        android:id="@+id/vehiclePicture"
        android:textSize="17sp"


       />


    <Button
    android:id="@+id/button1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:textColor="#ffffff"
    android:backgroundTint="#34609d"
        android:textAllCaps="false"
    android:text="Continue"
    android:background="@drawable/edges_round_for_textview"
    android:layout_alignParentBottom="true"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/vehiclePicture"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_photos"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:id="@+id/image1"

            />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/image2"
            android:scaleType="fitXY"
            android:background="@drawable/icon_photos"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/image3"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_photos"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/image4"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_photos"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/image5"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_photos"
            android:layout_centerInParent="true"
            />
        <!--<RelativeLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="70dp"-->
            <!--android:padding="8dp"-->
            <!--android:background="@drawable/dashed_cover"-->
            <!--&gt;-->

        <!--<ImageView-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:background="@drawable/icon_camera"-->
            <!--android:layout_centerInParent="true"-->
            <!--/>-->
        <!--</RelativeLayout>-->




    </LinearLayout>


</RelativeLayout>

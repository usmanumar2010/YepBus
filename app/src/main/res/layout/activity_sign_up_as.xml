<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_up_as"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="22dp"
    android:orientation="vertical"
    tools:context="com.example.usman.yepbus.SignUpAs"
    android:weightSum="1"  android:background="@drawable/bg">



    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/l1"
        android:layout_weight="0.2"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_marginLeft="0dp"
            android:background="@drawable/yep_bus"
            android:elevation="0dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:clickable="false"
            />


    </LinearLayout>
        <LinearLayout
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/l2"
            android:layout_below="@+id/l1"
            android:layout_alignParentEnd="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:id="@+id/signuptext"
                android:layout_centerInParent="true"
                android:textAlignment="viewEnd"
                android:textSize="28sp"
                android:textColor="#4b72a7"
                android:layout_centerHorizontal="true"
                />

            <Button

                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#34609d"
                android:text="@string/question_mark"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/round_button"
                android:id="@+id/btn_qustionMark"
               />
        </RelativeLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_below="@id/l2"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:id="@+id/l3"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        >


        <ImageView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_marginRight="15dp"
             android:id="@+id/driverimage"
             android:background="@drawable/driver"
             android:scaleType="fitXY"
            />


        <ImageView
            android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:background="@drawable/rider"
        android:layout_weight="1"
            android:scaleType="fitXY"
            android:id="@+id/riderimage"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:layout_below="@+id/l3"
        android:orientation="horizontal"

        >


        <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="YepDriver"
            android:textSize="20sp"
            android:id="@+id/yepDriver"
            android:layout_marginRight="10dp"
            android:textAllCaps="false"
        android:textColor="#ffffff"
        android:backgroundTint="#34609d"
        android:background="@drawable/edges_round_for_textview"
        android:layout_below="@id/driverimage"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Rider_btn"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="YepRider"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#34609d"
            android:background="@drawable/edges_round_for_textview"
            android:onClick="signUpRider"
            android:textAllCaps="false"
            />


    </LinearLayout>

